{
  "permissions": {
    "allow": [
      "Read(**/BACKLOG.md)",
      "Write(**/BACKLOG.md)",
      "Edit(**/BACKLOG.md)",
      "Update(**/BACKLOG.md)",
      "Read(**/docs/plans/*.md)",
      "Write(**/docs/plans/*.md)",
      "Edit(**/docs/plans/*.md)",
      "Update(**/docs/plans/*.md)",
      "Read(**/*.ts)",
      "Read(**/*.tsx)",
      "Read(**/*.js)",
      "Read(**/*.jsx)",
      "Read(**/*.go)",
      "Read(**/*.py)",
      "Read(**/*.dart)",
      "Read(**/pubspec.yaml)",
      "Read(**/*.md)",
      "Read(**/package.json)",
      "Read(**/go.mod)",
      "Read(**/Cargo.toml)",
      "Read(**/README.md)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(go test:*)",
      "Bash(cargo test:*)",
      "Bash(bash ~/.claude/scripts/flutter-test-runner.sh)",
      "Bash(bash ~/.claude/scripts/flutter-test-runner.sh *)",
      "Bash(bash ~/.claude/scripts/maestro-test-runner.sh)",
      "Bash(bash ~/.claude/scripts/maestro-test-runner.sh *)",
      "Bash(bash ~/.claude/skills/flutter-quality-gate/scripts/quality-gate.sh)",
      "Bash(bash ~/.claude/skills/flutter-quality-gate/scripts/quality-gate.sh *)",
      "Bash(flutter test *)",
      "Bash(flutter analyze:*)",
      "Bash(flutter pub:*)",
      "Bash(make maestro-*:*)",
      "Bash(make flutter-*:*)",
      "Read(**/.claude/tmp/*)",
      "Bash(tail */.claude/tmp/*)",
      "Bash(grep */.claude/tmp/*)",
      "Bash(cat */.claude/tmp/*)",
      "Bash(docker-compose up:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker-compose logs:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker-compose restart:*)",
      "Bash(docker exec:*)",
      "Bash(docker logs:*)",
      "Bash(docker ps:*)",
      "Bash(lsof:*)",
      "Bash(wc:*)",
      "Bash(find:*)",
      "Read(~/.claude/skills/**/*)",
      "mcp__serena",
      "mcp__notionApi",
      "mcp__playwright",
      "mcp__gemini-cli"
    ],
    "deny": [
      "Read(.env)",
      "Read(**/.env)"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/check-diff-size.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
