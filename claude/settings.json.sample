{
  "permissions": {
    "deny": [
      "Read(.env)",
      "Read(**/.env)"
    ],
    "allow": [
      "Read(**/*.ts)",
      "Read(**/*.tsx)",
      "Read(**/*.js)",
      "Read(**/*.jsx)",
      "Read(**/*.go)",
      "Read(**/*.py)",
      "Read(**/*.md)",
      "Read(**/package.json)",
      "Read(**/go.mod)",
      "Read(**/Cargo.toml)",
      "Read(**/README.md)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(go test:*)",
      "Bash(cargo test:*)",
      "Bash(docker-compose up:*)",
      "Bash(docker-compose ps:*)",
      "Bash(docker-compose logs:*)",
      "Bash(docker-compose down:*)",
      "Bash(docker-compose restart:*)",
      "Bash(docker exec:*)",
      "Bash(docker logs:*)",
      "Bash(docker ps:*)",
      "Bash(lsof:*)",
      "Bash(wc:*)",
      "Bash(find:*)",
      "mcp__serena",
      "mcp__notionApi",
      "mcp__playwright",
      "mcp__gemini-cli"
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Ping.aiff"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "afplay /System/Library/Sounds/Glass.aiff"
          }
        ]
      },
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash ~/.claude/hooks/check-diff-size.sh"
          }
        ]
      }
    ]
  },
  "alwaysThinkingEnabled": true
}
